<resources>
    
    <!-- Light base application theme. -->
    <style name="LightBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--System coloring-->
        <item name="colorPrimary">@color/tlight_primary</item>
        <item name="colorPrimaryDark">@color/tlight_primary_dark</item>
        <item name="colorAccent">@color/tlight_accent</item>
        
        <!--Color scheme-->
        <item name="primary">@color/tlight_primary</item>
        <item name="primary_dark">@color/tlight_primary_dark</item>
        <item name="primary_light">@color/tlight_primary_light</item>
        <item name="accent">@color/tlight_accent</item>
        <item name="primary_text">@color/tlight_primary_text</item>
        <item name="secondary_text">@color/tlight_secondary_text</item>
        <item name="icons">@color/tlight_icons</item>
        <item name="divider">@color/tlight_divider</item>
    </style>
    
    <!-- Dark base application theme. -->
    <style name="DarkBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--System coloring-->
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>
    
</resources>
