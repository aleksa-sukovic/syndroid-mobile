<resources>
    
    <!-- Light base application theme. -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <!--System coloring-->
        <item name="colorPrimary">@color/tlight_primary</item>
        <item name="colorPrimaryDark">@color/tlight_primary_dark</item>
        <item name="colorAccent">@color/tlight_accent</item>
        
        <!--Color scheme-->
        <item name="primary">@color/tlight_primary</item>
        <item name="primary_dark">@color/tlight_primary_dark</item>
        <item name="primary_light">@color/tlight_primary_light</item>
        <item name="accent">@color/tlight_accent</item>
        <item name="primary_text">@color/tlight_primary_text</item>
        <item name="secondary_text">@color/tlight_secondary_text</item>
        <item name="icons">@color/tlight_icons</item>
        <item name="divider">@color/tlight_divider</item>
        <item name="background">@color/tlight_background</item>
        <item name="highlight">@color/tlight_highlight</item>
        
        <!--Drawables-->
        <item name="connect_btn">@drawable/ic_connect_btn_light</item>
        <item name="background_image">@drawable/ic_background_light</item>
        <item name="favourites_item_bg">@drawable/ic_favourites_item_background_light</item>
        <item name="media_play">@drawable/ic_play_circle_light</item>
        <item name="media_arrow">@drawable/ic_media_arrow_light</item>
        <item name="triangle">@drawable/ic_triangle_light</item>
    </style>
    
    <!-- Dark base application theme. -->
    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <!--System coloring-->
        <item name="colorPrimary">@color/tdark_primary</item>
        <item name="colorPrimaryDark">@color/tdark_primary_dark</item>
        <item name="colorAccent">@color/tdark_accent</item>
    
        <!--Color scheme-->
        <item name="primary">@color/tdark_primary</item>
        <item name="primary_dark">@color/tdark_primary_dark</item>
        <item name="primary_light">@color/tdark_primary_light</item>
        <item name="accent">@color/tdark_accent</item>
        <item name="primary_text">@color/tdark_primary_text</item>
        <item name="secondary_text">@color/tdark_secondary_text</item>
        <item name="icons">@color/tdark_icons</item>
        <item name="divider">@color/tdark_divider</item>
        <item name="background">@color/tdark_background</item>
        <item name="highlight">@color/tdark_highlight</item>

        <!--Drawables-->
        <item name="connect_btn">@drawable/ic_connect_btn_dark</item>
        <item name="background_image">@drawable/ic_background_dark</item>
        <item name="favourites_item_bg">@drawable/ic_favourites_item_background_dark</item>
        <item name="media_play">@drawable/ic_play_circle_dark</item>
        <item name="media_arrow">@drawable/ic_media_arrow_dark</item>
        <item name="triangle">@drawable/ic_triangle_dark</item>
    </style>
    
    <!--Connect Activity-->
    <style name="ConnectActivityLight" parent="ActivityTheme.Primary.Base.Light" />
    <style name="ConnectActivityDark"  parent="ActivityTheme.Primary.Base.Dark" />
    
    <!--Scanner Activity-->
    <style name="ScannerActivityLight" parent="ActivityTheme.Primary.Base.Light" />
    <style name="ScannerActivityDark"  parent="ActivityTheme.Primary.Base.Dark" />
    
    <!--Dashboard Activity-->
    <style name="DashboardActivityLight" parent="ActivityTheme.Primary.Base.Light" />
    <style name="DashboardActivityDark"  parent="ActivityTheme.Primary.Base.Dark" />

</resources>
