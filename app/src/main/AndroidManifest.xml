<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aleksa.syndroid">
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.connect.ConnectActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ConnectActivityLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
    
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        
        <!-- Scanner Activity -->
        <activity
            android:name=".activities.scanner.ScannerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ScannerActivityLight" />
        
        <!--Dashboard Activity-->
        <activity
            android:name=".activities.dashboard.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DashboardActivityLight"
            />
    </application>
</manifest>
